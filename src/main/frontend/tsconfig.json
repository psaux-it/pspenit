{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "declaration": true,    
    "esModuleInterop": true,
    "strictNullChecks": true,    
    "noImplicitAny": true,
    "ignoreDeprecations": "5.0",
    "types": ["svelte"],
    "outDir": "public/build"
  },
  "include": [
    "src/**/*" ],
  
  "exclude": [
    "node_modules/**/*",
    "public/**/*",
    "build/**/*",
    "node/**/*"
  ]
}
